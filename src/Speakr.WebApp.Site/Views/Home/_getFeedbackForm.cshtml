@model GetFeedbackFormViewModel

<form asp-controller="Home" asp-action="CheckTalkIdCode" method="post" class="form-horizontal">

    @if (Model != null && Model.HasErrors)
    {
        <p class="alert alert-danger">@Model.TalkIdErrorMessage</p>
    }

    <span asp-validation-for="TalkId" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="TalkId" class="control-label col-sm-2"></label>

        <div class="col-sm-10">
            <input asp-for="TalkId" type="text" class="form-control" placeholder="Please enter your Talk Id">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <input type="submit" class="btn btn-primary" value="Submit!" />
        </div>
    </div>
</form>
